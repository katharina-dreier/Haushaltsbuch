<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.shape.*?>


<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.meinprojekt.haushalt.ui.MainController">

    <!-- Oben: Toolbar -->
    <top>
        <ToolBar styleClass="toolbar">
            <Button fx:id="btnNeuesKonto" onAction="#handleNeuesKonto" text="Neues Konto"/>
            <Button fx:id="btnNeueEinnahme"   onAction="#handleNeueEinnahme"  text="Neue Einnahme"/>
            <Button fx:id="btnNeueAusgabe"   onAction="#handleNeueAusgabe"   text="Neue Ausgabe"/>
            <Button fx:id="btnNeueUmbuchung"   onAction="#handleNeueUmbuchung" text="Neue Umbuchung"/>
        </ToolBar>
    </top>

    <!-- Mitte: Links Konten+Buchungen, Rechts Diagramme -->
    <center>
        <SplitPane fx:id="split" dividerPositions="0.5"> 

            <!-- Linke Seite: Konten + Buchungen untereinander -->
            <VBox spacing="10">

                <!-- Karte: Konten -->
                <VBox fx:id="kontenArea" spacing="8" styleClass="card">
                    <Label text="Konten" styleClass="card-title"/>
                    <TableView fx:id="tblKonten" >
                        <columns>
                            <TableColumn fx:id="colKontonummer"          text="Kontonummer"   prefWidth="120"/>
                            <TableColumn fx:id="colKontoName"        text="Name"          prefWidth="150"/>
                            <TableColumn fx:id="colKontostand"  text="Kontostand"    prefWidth="100"/>
                            <TableColumn fx:id="colInstitut"    text="Kreditinstitut" prefWidth="140"/>
                        </columns>
                    </TableView>
                    <Label fx:id="summeAlleKontenLbl" text="Summe: 0,00 €" style="-fx-padding: 4 0 0 0;"/>
                </VBox>

				
                <!-- Karte: Buchungen -->
                <VBox fx:id="buchungenArea" spacing="8" styleClass="card">
                 <Label text="Buchungen" styleClass="card-title"/>
                 <VBox spacing="0">
                    <TabPane fx:id="tabPane"  styleClass="filter-tabs" minHeight="28.0" prefHeight="28.0">
                        <tabs>
                            <Tab fx:id="tabGesamt"      text="Gesamt"/>
                            <Tab fx:id="tabEinnahmen"   text="Einnahmen"/>
                            <Tab fx:id="tabAusgaben"    text="Ausgaben"/>
                            <Tab fx:id="tabUmbuchungen" text="Umbuchungen"/>
                        </tabs>
                    </TabPane>

                    <TableView fx:id="tblBuchungen" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colBuchungsDatum" text="Buchungsdatum" prefWidth="150"/>
                            <TableColumn fx:id="colKategorie"       text="Kategorie"     prefWidth="150"/>
                            <TableColumn fx:id="colEmpfaenger"      text="Empfänger"     prefWidth="120"/>
                            <TableColumn fx:id="colSender"      text="Sender"        prefWidth="120"/>
                            <TableColumn fx:id="colBetrag"    text="Betrag"        prefWidth="100"/>
                            <TableColumn fx:id="colKonto"     text="Konto"         prefWidth="150"/>
                        </columns>
                    </TableView>
					</VBox>
                    <Label fx:id="summeBuchungenLbl" text="Summe: 0,00 €" style="-fx-padding: 4 0 0 0;"/>
                </VBox>
 				</VBox>
            

            <!-- Rechte Seite: Diagramme -->
           <VBox fx:id="statistikArea" spacing="10" styleClass="card" VBox.vgrow="ALWAYS" alignment="TOP_CENTER">
   					 <Label text="Diagramme" styleClass="card-title"/>
    				<HBox fx:id="diagrammLegende" spacing="60" alignment="CENTER" styleClass="chart-header">

    					<children>

        					<!-- Block 1: Einnahmen -->
        					<VBox spacing="2" alignment="CENTER_LEFT">
           					 <children>
                				<HBox spacing="10" alignment="BASELINE_LEFT">
                    		<children>
                        		<Circle radius="5" styleClass="legend-dot-einnahmen"/>
                       			 <Label text="Einnahmen" styleClass="chart-header"/>
                    </children>
                </HBox>
                <Label fx:id="legendeEinnahmenlbl" text="Summe: 0,00 €" styleClass="chart-header-sum"/>
            </children>
        </VBox>

        <!-- Block 2: Ausgaben -->
        <VBox spacing="2" alignment="CENTER_LEFT">
            <children>
                <HBox spacing="10" alignment="BASELINE_LEFT">
                    <children>
                        <Circle radius="5" styleClass="legend-dot-ausgaben"/>
                        <Label text="Ausgaben"
                               styleClass="chart-header"/>
                    </children>
                </HBox>
                <Label fx:id="legendeAusgabenlbl"
                       text="Summe: 0,00 €"
                       styleClass="chart-header-sum"/>
            </children>
        </VBox>

        <!-- Block 3: Differenz -->
        <VBox spacing="2" alignment="CENTER_LEFT">
            <children>
                <HBox spacing="5" alignment="BASELINE_LEFT">
                    <children>
                        <Label text="Differenz"
                               styleClass="chart-header"/>
                    </children>
                </HBox>
                <Label fx:id="legendeDifferenzlbl"
                       text="Summe: 0,00 €"
                       styleClass="chart-header-sum"/>
            </children>
        </VBox>

    </children>
</HBox>

    				<AreaChart fx:id="einnahmenAusgabenDiagramm" VBox.vgrow="ALWAYS">
       					<xAxis>
           					 <CategoryAxis fx:id="xAchseEinnahmenAusgabenDiagramm"/>
       					</xAxis>
       					<yAxis>
           					 <NumberAxis fx:id="yAchseEinnahmenAusgabenDiagramm"/>
       					</yAxis>
       					</AreaChart>
			</VBox>


        </SplitPane>
    </center>

  
    <bottom>
        
    </bottom>

</BorderPane>
